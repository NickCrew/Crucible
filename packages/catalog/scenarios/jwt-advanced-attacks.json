{
  "id": "jwt-advanced-attacks",
  "name": "Advanced JWT Cryptographic Attacks",
  "category": "Authentication",
  "difficulty": "Advanced",
  "description": "Exploits common JWT implementation flaws including algorithm downgrades and key confusion.",
  "steps": [
    {
      "id": "jwt-alg-none-bypass",
      "name": "JWT Algorithm 'none' Bypass",
      "stage": "exploitation",
      "request": {
        "method": "GET",
        "url": "/api/v1/auth/status",
        "headers": {
          "Authorization": "Bearer eyJhbGciOiJub25lIiwidHlwIjoiSldUIn0.eyJ1c2VySWQiOiJhZG1pbiIsImV4cCI6MTk5OTk5OTk5OX0.",
          "X-JWT-Algorithm": "none"
        }
      },
      "execution": {
        "delayMs": 500
      },
      "expect": {
        "blocked": true
      }
    },
    {
      "id": "jwt-key-confusion",
      "name": "JWT RS256 to HS256 Key Confusion",
      "stage": "exploitation",
      "request": {
        "method": "POST",
        "url": "/api/v1/admin/users/USR-001/elevate",
        "headers": {
          "Authorization": "Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiJhZG1pbiIsImlhdCI6MTUxNjIzOTAyMn0.fake-hmac-signed-with-public-key"
        },
        "body": {
          "role": "admin"
        }
      },
      "execution": {
        "delayMs": 800
      },
      "expect": {
        "blocked": true
      }
    },
    {
      "id": "jwt-kid-injection",
      "name": "JWT 'kid' Header Injection",
      "stage": "exploitation",
      "request": {
        "method": "GET",
        "url": "/api/v1/admin/logs?file=../../../../dev/null",
        "headers": {
          "Authorization": "Bearer eyJhbGciOiJIUzI1NiIsImtpZCI6Ii4uLy4uLy4uL2Rldi9udWxsIn0.eyJzdWIiOiJhZG1pbiJ9.signature"
        }
      },
      "execution": {
        "delayMs": 1000
      },
      "expect": {
        "blocked": true
      }
    }
  ]
}
